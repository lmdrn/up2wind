<div class='u-grid'>
  <div class='banner item-a'>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to "#", class: "navbar-brand" do %>
      <h1> <%= image_tag "logo_UP2WINDgreen.svg" %>
      UP2WIND</h1>
      <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Qui sommes-nous?", "#", class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Comment ça marche?", "#", class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Nos produits", "#", class: "nav-link" %>
            </li>
            <li class="nav-item dropdown">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Mon profil", "#", class: "dropdown-item" %>
                <%= link_to "Mes commandes", "#", class: "dropdown-item" %>
                <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Se connecter", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
     <div class='banner-content'>
      <div class="banner-text">
        <h1>Connectez-vous au vent!</h1>
        <h3>l'éolienne de 600W prête à l'emploi</h3>
        <p>
        sans <span id='banner-typed-text'></span>
        </p>
      </div>
      <div class="banner-img">
      <%= image_tag "eol-banner.png", class: 'image-eolienne' %>
     </div>
     </div>
    <div class='green-container item-b'>
     </div>
     <div class='presentation-icons item-c'>
      <div class='inline-text'>
        <div class="inline-text-block">
          <h5>Branchez</h5>
          <p>sur une prise 220V</p>
        </div>
          <i class="fas fa-plug"></i>
        <div class="inline-text-block">
          <h5>Customisez</h5>
          <p>selon vos envies</p>
        </div>
          <i class="fas fa-paint-roller"></i>
        <div class="inline-text-block">
          <h5>Utilisez</h5>
          <p>production immédiate</p>
        </div>
          <i class="fas fa-lightbulb"></i>
      </div>
     </div>
  </div>
